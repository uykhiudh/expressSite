<h1>Request Group Rate</h1>
<form id="myForm">
    <input type="hidden" value="" name="referrer">
    Name:<input type="text" id="fieldName" name="name"><br>
    Group size: <input type="text" name="groupSize"><br>
    Email: <input type="email" name="email"><br>
    <input type="submit" value="Submit">
</form>
<script>

    document.querySelector('input[name=referrer]').value = document.referrer;
    // console.log(document.forms[0].elements);
    $(function () {
        $(':submit').click(function () {
            var obj = {};
            console.log($('form').serialize());
            var t = $('form').serializeArray();
            $.each(t, function (k, v) {
                obj[v.name] = v.value;
            });

            $.post('/process-contact',obj,function (res) {
                console.log(res);
            });

            return false;
        });
    });


</script>



